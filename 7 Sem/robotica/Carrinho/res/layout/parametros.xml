<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:layout_width="fill_parent" android:layout_height="wrap_content" 
    android:id="@+dados/btTela" android:text="Andar"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Flash"/>
    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
    android:id="@+dados/comFlash"  android:text="Flash Ligado" />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Manual"/>
    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
    android:id="@+dados/manual"  android:text="Manual" />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Preview"/>
    <ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
    android:id="@+dados/preview"  android:text="Preview" />
</LinearLayout>

